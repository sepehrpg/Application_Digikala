<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:background="@color/ghemezkamrang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="left|center_vertical"

        >

        <ImageView
            android:id="@+id/Close_Main_Toolbar"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:src="@drawable/ic_cancel"
            android:tint="#333333"

            />
        <TextView
            android:id="@+id/Title_Custom_Toolbar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:text="ثبت نام"
            android:gravity="right|center_vertical"
            android:textSize="18dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/iranian_sans"
            android:textColor="#fff"
            />

        <ImageView
            android:id="@+id/Img_search_Main_Toolbar"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:src="@drawable/ic_search_black_24dp"
            android:tint="#fff" />

        <ImageView
            android:id="@+id/Img_store_Main_toolbar"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_store_white"
            android:tint="#fff"
            android:layout_marginLeft="12dp"
            />


    </LinearLayout>



</androidx.appcompat.widget.Toolbar>