<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ClickProductShow"
    >


<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:layout_margin="7dp"
    android:background="#fff"
    android:backgroundTint="#fff"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/Img_FavList"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:padding="15dp"
            android:src="@drawable/loading"
            />

        <TextView
            android:id="@+id/Txt_ListProductPe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="ایفون X"
            android:textColor="#000"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="@font/iranian_sans"
            />
        <TextView
            android:id="@+id/Txt_ListProductEn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="iphone X"
            android:fontFamily="@font/iranian_sans"
            android:lines="2"
            android:ellipsize="end"
            />


        <View
            android:id="@+id/viewProduct"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ACA3A3"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            >
            <TextView
                android:id="@+id/Txt_ListProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                tools:text="200000000"
                android:textColor="#069c27"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/iranian_sans"
                android:lines="1"
                android:ellipsize="end"
                />
        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>
