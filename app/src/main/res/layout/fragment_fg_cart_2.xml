<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:orientation="vertical">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/circle_image"
                        android:src="@drawable/ic_check_black_24dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="انتخاب آدرس"
                        android:fontFamily="@font/iranian_sans"
                        android:layout_marginTop="10dp"
                        android:textSize="13sp"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="______"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/circle_image"
                        android:src="@drawable/ic_check_black_24dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="شیوه ارسال"
                        android:fontFamily="@font/iranian_sans"
                        android:layout_marginTop="10dp"
                        android:textSize="13sp"

                        />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="______"
                    android:textColor="#000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/circle_image_2"
                        android:text="3"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="14dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="پرداخت"
                        android:fontFamily="@font/iranian_sans"
                        android:layout_marginTop="10dp"
                        android:textSize="13sp"
                        />

                </LinearLayout>



            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:layout_margin="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="کد تخفیف دارم"
                            android:fontFamily="@font/iranian_sans"
                            android:textSize="13sp"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:layout_margin="15dp"
                            />

                        <Switch
                            android:id="@+id/SwichCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            />

                    </LinearLayout>

                    <View
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eee"
                        />

                    <EditText
                        android:id="@+id/Edt_CodeOffer"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="کد تخفیف"
                        android:layout_margin="15dp"
                        android:backgroundTint="#0CC513"
                        />

                    <TextView
                        android:id="@+id/Txt_RegCodeOffer"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ثبت کد تخفیف"
                        android:fontFamily="@font/iranian_sans"
                        android:textSize="13dp"
                        android:gravity="left"
                        android:layout_margin="10dp"
                        android:textColor="#740886"
                        />



                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <!--<com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/Progress"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="خرید بالای 150 هزار تومان فاقد هزینه ارسال پست میباشد"
                android:textSize="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/iranian_sans"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:layout_margin="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_weight="1"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="جمع کل قیمت محصولات"
                            android:fontFamily="@font/iranian_sans"
                            android:textSize="12dp"
                            android:gravity="right"
                            android:layout_margin="10dp"
                            android:textColor="@color/sabzporrang"
                            />

                        <TextView
                            android:id="@+id/Txt_Final_PriceSumCart"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="445,320 تومان"
                            android:fontFamily="@font/iranian_sans"
                            android:textSize="13dp"
                            android:gravity="right"
                            android:layout_margin="10dp"
                            android:textColor="#000"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="هزینه ارسال مرسوله"
                            android:fontFamily="@font/iranian_sans"
                            android:textSize="12dp"
                            android:gravity="right"
                            android:layout_margin="10dp"
                            android:textColor="@color/sabzporrang"
                            />

                        <TextView
                            android:id="@+id/Txt_Price_Post"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="445,320 تومان"
                            android:fontFamily="@font/iranian_sans"
                            android:textSize="13dp"
                            android:gravity="right"
                            android:layout_margin="10dp"
                            android:textColor="#000"
                            />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="جمع کل قابل پرداخت"
                            android:fontFamily="@font/iranian_sans"
                            android:textSize="12dp"
                            android:gravity="right"
                            android:layout_margin="10dp"
                            android:textColor="@color/sabzporrang"
                            />

                        <TextView
                            android:id="@+id/Txt_Final_AllPrice"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="445,320 تومان"
                            android:fontFamily="@font/iranian_sans"
                            android:textSize="13dp"
                            android:gravity="right"
                            android:layout_margin="10dp"
                            android:textColor="#000"
                            />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:layout_margin="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="شیوه پرداخت"
                        android:fontFamily="@font/iranian_sans"
                        android:textSize="13dp"
                        android:gravity="right"
                        android:layout_margin="10dp"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="7dp"
                        android:layout_margin="15dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="پرداخت اینترنتی"
                                    android:fontFamily="@font/iranian_sans"
                                    android:textSize="15dp"
                                    android:gravity="right"
                                    android:layout_margin="10dp"
                                    android:layout_gravity="center_vertical"
                                    />

                                <RadioButton
                                    android:id="@+id/Radio_Zarinpal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="#eeee"
                                android:layout_margin="10dp"
                                >

                                <ImageView
                                    android:id="@+id/Img_ZarinPal"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_user_money"
                                    />

                                <TextView
                                    android:id="@+id/Txt_DargahZarinpal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="زرین پال"
                                    android:fontFamily="@font/iranian_sans"
                                    android:textSize="13dp"
                                    android:gravity="right"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="#000"

                                    />

                            </LinearLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="7dp"
                        android:layout_margin="15dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="پرداخت اینترنتی"
                                    android:fontFamily="@font/iranian_sans"
                                    android:textSize="15dp"
                                    android:gravity="right"
                                    android:layout_margin="10dp"
                                    android:layout_gravity="center_vertical"
                                    />

                                <RadioButton
                                    android:id="@+id/Radio_Melat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="#eeee"
                                android:layout_margin="10dp"
                                >

                                <ImageView
                                    android:id="@+id/Img_Melat"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_user_money"
                                    />

                                <TextView
                                    android:id="@+id/Txt_DargahMelat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/iranian_sans"
                                    android:gravity="right"
                                    tools:text="ملت"
                                    android:textColor="#000"
                                    android:textSize="13dp" />

                            </LinearLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:layout_margin="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:id="@+id/Txt_AddressFinalyCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/iranian_sans"
                        android:gravity="right"
                        tools:text="مامی مرسوله ها به ادرس باغستان غربی شبنم 9 ساختمان میلاد یک واحد 3 ارسال میشود"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/Txt_CodeOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/iranian_sans"
                        android:gravity="right"
                        tools:text="کد سفارش 2132183912"
                        android:textSize="14dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="خلاصه سفارش شما"
                android:fontFamily="@font/iranian_sans"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Rec_SumBuy"
                android:scrollbars="horizontal"
                >

            </androidx.recyclerview.widget.RecyclerView>



            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                >

                <Button
                    android:id="@+id/Btn_FinishAndPeyment"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="پرداخت و تکمیل خرید "
                    android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
                    android:drawableTint="#fff"
                    android:background="@color/sabz"
                    android:layout_alignParentBottom="true"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:fontFamily="@font/iranian_sans"
                    />

            </LinearLayout>



        </LinearLayout>



    </androidx.core.widget.NestedScrollView>











</LinearLayout>