<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    tools:context=".Panel_User.Panel.EditPanel.Act_List_Address">

   <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layoutDirection="rtl"
        android:background="@color/ghemezkamrang">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="left|center_vertical"
            >

            <ImageView
                android:id="@+id/Img_back_Address"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/ic_cancel"
                android:tint="#333333"

                />
            <TextView
                android:id="@+id/Title_Custom_Toolbar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="لیست آدرس ها"
                android:gravity="right|center_vertical"
                android:textSize="17dp"
                android:paddingRight="10dp"
                android:fontFamily="@font/iranian_sans"
                android:textColor="#fff"
                />

            <ImageView
                android:id="@+id/Img_Add_Address"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/ic_add"
                android:tint="#fff"
                />


        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/Txt_ListAddress_POINT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="هنوز آدرسی ثبت نشده"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_margin="20dp"
        android:padding="6dp"
        android:fontFamily="@font/iranian_sans"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Rec_ListAddress"
            android:padding="4dp"
            >

        </androidx.recyclerview.widget.RecyclerView>




    </RelativeLayout>




</LinearLayout>