<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"

    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    tools:context=".More_Product.Comment.Act_More_AddComment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="#fff"
        app:cardCornerRadius="5dp"
        android:backgroundTint="#fff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="10dp"
            >

            <EditText
                android:id="@+id/Edt_NameCommentUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:hint="نام و نام خوانوادگی"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_positive"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نکات مثبت :"
                    android:fontFamily="@font/iranian_sans"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/Edt_Mosbat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:hint="باطری قوی داره و شارژ خیلی خوب نگه میداره دوربینش هم نسبت به هم رده های خودش خوبه و حرفی برای گفتن داره "
                    android:fontFamily="@font/iranian_sans"
                    android:textSize="13sp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#EEAFADAD"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_margin="5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_negative"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نکات منفی :"
                    android:fontFamily="@font/iranian_sans"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="2dp"
                >
                <EditText
                    android:id="@+id/Edt_Manfi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:hint="جنس بدنش ضعیفه و حافظه داخلی هم 8 گیگ بیشتر نداره در صورتی که هم رده های این گوشی حافظه بیشتری دارند و میتونست توی این مورد بهتر عمل کنه"
                    android:fontFamily="@font/iranian_sans"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#EEAFADAD"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iranian_sans"
                android:textSize="15sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="جمع بندی"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/Txt_Comment_MoreUser"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iranian_sans"
                android:textSize="13sp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                tools:hint="در کل گوشی خوبیه و نسبت به قیمتی که داره امکانات قابل قبولی اراعه کرده من پیشنهاد میکنم که اگر قصد خرید گوشی تو این قیمت را دارید این گوشی رو بگیرید"
                />



        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        >
        <TextView
            android:id="@+id/Txt_Btn_AddCommnt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ثبت امتیاز و افزودن نظر"
            android:fontFamily="@font/iranian_sans"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@color/sabz"
            android:textColor="#fff"
            />

    </LinearLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>
