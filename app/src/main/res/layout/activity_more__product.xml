<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".More_Product.More_Product"
    android:background="#f5f5f5"
    android:layoutDirection="rtl"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar_MoreProduct"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#fff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layoutDirection="ltr"
            >

            <ImageView
                android:id="@+id/Img_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_store_black" />

            <TextView
                android:id="@+id/Tv_Toolbar_Title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                tools:text="تست ادامه خرید دیجی کالا"
                android:textSize="14dp"
                android:fontFamily="@font/iranian_sans"
                android:textColor="#fff"
                android:layout_marginRight="15dp"
                />


            <ImageView
                android:id="@+id/Img_back_MoreProduct"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_right_black" />

        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/Scroll_MoreProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="#f5f5f5"

        >

        <LinearLayout
            android:id="@+id/Linear_By_Slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f5f5f5"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/ViewPage_More_Product"
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:backgroundTint="#fff"
                    android:layout_height="240dp">


                </androidx.viewpager.widget.ViewPager>

                <LinearLayout
                    android:id="@+id/Linear_Indicator_MoreProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="203dp"
                    android:layoutDirection="ltr"
                    >

                </LinearLayout>

            </RelativeLayout>





        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
            app:cardElevation="4dp"
            android:background="#f5f5f5"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f5f5f5"

                >



            <LinearLayout
                android:id="@+id/Linear_Action_MoreProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="#f5f5f5"
                android:gravity="left"
                >
                <ImageView
                    android:id="@+id/Img_Fav_MoreProduct"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_favorite_border_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    />

                <ImageView
                    android:tint="@color/meshkii"
                    android:id="@+id/Img_Share_MoreProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_share_black_24dp" />

            </LinearLayout>


                <TextView
                    android:id="@+id/Tv_Title_Prodict_fa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="تست نام محصول شرکت من"
                    android:layout_margin="10dp"
                    android:textColor="#797575"
                    android:fontFamily="@font/iranian_sans"
                    />

                <TextView
                    android:id="@+id/Tv_Title_Prodict_en"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="تست نام محصول"
                    android:layout_margin="10dp"
                    android:textColor="#797575"
                    android:fontFamily="@font/iranian_sans"
                    />


                <LinearLayout
                    android:id="@+id/Linear_Timer_MoreProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_tv_sec"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="4"
                        android:src="@mipmap/image_sh" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Tv__sec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:background="@drawable/shape_timer"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="12"
                            android:textColor="#fff"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text=":"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Tv__min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:background="@drawable/shape_timer"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="12"
                            android:textColor="#fff"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text=":"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Tv_hour"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:background="@drawable/shape_timer"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="12"
                            android:textColor="#fff"
                            android:textSize="18sp" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="#7E7D7D"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    >


                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="4dp"
                        android:layout_margin="10dp"
                        app:cardElevation="7dp"

                        >
                        <LinearLayout
                            android:id="@+id/Property_MOreProduct"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/ic_favorite_border_black_24dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                />

                            <TextView
                                android:id="@+id/Txt_property"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/iranian_sans"
                                android:gravity="center|center_vertical"
                                android:text="مشخصات"
                                android:textColor="#616060"
                                android:textSize="15dp" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="4dp"
                        android:layout_margin="10dp"
                        app:cardElevation="7dp"
                        >

                        <LinearLayout
                            android:id="@+id/Linear_Commert_MoreProduct"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/ic_favorite_border_black_24dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="نظرات کاربران"
                                android:gravity="center|center_vertical"
                                android:fontFamily="@font/iranian_sans"
                                android:textColor="#616060"
                                android:textSize="15dp"
                                />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/TestScroll"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/TestScroll"
                    />




            </LinearLayout>

        </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</LinearLayout>