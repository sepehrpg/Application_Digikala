<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    tools:context=".Main_Home.Menu_Navigation.Act_About_Company">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@drawable/shape_bk45_4"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layoutDirection="ltr"
            >

            <ImageView
                android:id="@+id/back_about"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:tint="#fff" />


        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <Button
            android:onClick="Btn_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_bk45_6"
            android:textColor="#fff"
            android:textSize="22sp"
            android:text="ایمیل به شرکت"
            />
        <Button
            android:onClick="Btn_Call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_bk45_6"
            android:textColor="#fff"
            android:textSize="22sp"
            android:text="تماس با ما"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/VersionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:text="2.0"
                android:textColor="#4B4B4B"
                android:textSize="22sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نسخه اپلیکیشن:"
                android:textSize="22sp"
                android:textColor="#4B4B4B"
                android:layout_marginLeft="7dp"
                />



        </LinearLayout>

    </LinearLayout>




</LinearLayout>