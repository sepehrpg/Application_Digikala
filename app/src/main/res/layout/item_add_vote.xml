<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >

            <TextView
                android:id="@+id/Txt_AddComment_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ارزش خرید نسبت به قیمت"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="#1D1C1C"
                android:fontFamily="@font/iranian_sans"
                />

            <SeekBar
                android:id="@+id/Seekbar_AddVote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:progress="0"
                android:progressTint="#34495E"
                android:max="5"
                android:thumb="@drawable/thumb"
                />

            <TextView
                android:id="@+id/Txt_Seekbar"
                android:fontFamily="@font/iranian_sans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>










</LinearLayout>