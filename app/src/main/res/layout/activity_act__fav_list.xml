<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    tools:context=".Panel_User.Fav.Act_FavList">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layoutDirection="rtl"
        android:background="@color/ghemezkamrang">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="left|center_vertical"
            >

            <ImageView
                android:id="@+id/Close_FavList"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/ic_back_right_white"
                />

            <TextView
                android:id="@+id/Title_Custom_Toolbar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="لیست علاقه مندی ها"
                android:gravity="right|center_vertical"
                android:textSize="18dp"
                android:paddingRight="10dp"
                android:fontFamily="@font/iranian_sans"
                android:textColor="#fff"
                />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Rec_FavList"
        android:padding="10dp"
        app:stackFromEnd="true"
        app:reverseLayout="true"
        >

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>