<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="13dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3dp"
                >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="نام کاربر :"
                    android:fontFamily="@font/iranian_sans"
                    android:textSize="14dp"
                    android:textColor="#000"
                    />

                <TextView
                    android:id="@+id/Txt_Commment_NameUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="سپهر نیک بین"
                    android:fontFamily="@font/iranian_sans"
                    android:textSize="13dp"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >
                <TextView
                    android:id="@+id/Txt_Comment_VoteUser"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="مجموع امتیازات فلان قد"
                    android:gravity="right"
                    android:fontFamily="@font/iranian_sans"
                    android:textSize="11dp"
                    />

                <RatingBar
                    android:id="@+id/Rat_Comment"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:numStars="5"
                    android:progressBackgroundTint="#3A3838"
                    android:progressTint="#E74714"
                    android:rating="3"
                    android:theme="@style/Rating1" />
            </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="7dp"
                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="نظر کاربر :"
                        android:fontFamily="@font/iranian_sans"
                        android:textSize="14dp"
                        android:textColor="#000"
                        />

                    <TextView
                        android:id="@+id/Txt_Comment_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="من از این محصول استفاده کردم خیلی خوبه و باطری قوی داره قیمتش هم مناسب و با این قیمت به نظرم نمیشه گوشی بهتری خرید دوربینش هم خیلی خوبه و حرف نداره هم جلو و هم عقب "
                        android:fontFamily="@font/iranian_sans"
                        android:textSize="13dp"
                        android:justificationMode="inter_word"
                        android:lines="5"
                        android:ellipsize="end"
                        />

                        <TextView
                            android:id="@+id/Txt_CommentMore"
                            android:layout_marginTop="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="7dp"
                            android:text="ادامه مطلب و جزئیات..."
                            android:layout_gravity="center_vertical"
                            android:textSize="16dp"
                            android:fontFamily="@font/iranian_sans"
                            android:textColor="#2196F3"
                            android:gravity="center|center_vertical"
                            />


                    <TextView
                        android:id="@+id/DateCommentAllUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="1399/5/29"
                        android:textSize="11sp"
                        android:fontFamily="@font/iranian_sans"
                        />



                </LinearLayout>






        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>