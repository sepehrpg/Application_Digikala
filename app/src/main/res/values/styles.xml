<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f5363e</item>
        <item name="colorPrimaryDark">#582A2D</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light.NoActionBar" />


    <style name="NavigationView" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:listDivider">@color/meshki_kamrang</item>
        <item name="android:textColorSecondary">@color/red</item>
        <item name="android:fontFamily">@font/iranian_sans</item>
    </style>


    <style name="tablayout_font"  parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:fontFamily">@font/iranian_sans</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:layoutDirection">rtl</item>
    </style>


    <style name="CheckBox_Filter" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorControlActivated">#8A8989</item>
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="switchFilter"  parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:colorControlActivated">@color/sabzporrang</item>
    </style>



    <style name="Rating1" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:colorControlNormal">@color/banafsh</item>
        <item name="android:colorControlActivated">@color/sabzporrang</item>

    </style>


    <style name="Rating2">

        <item name="android:indeterminateOnly">false</item>
        <!--<item name="android:progressDrawable"></item>-->
        <!--<item name="android:indeterminateDrawable"></item>-->
        <item name="android:minHeight">38dp</item>
        <item name="android:maxHeight">38dp</item>
        <item name="android:isIndicator">true</item>
        <!--<item name="android:thumb">@null</item>-->
    </style>


    <style name="Rating3">

        <item name="android:indeterminateOnly">false</item>
        <!--<item name="android:progressDrawable"></item>-->
        <!--<item name="android:indeterminateDrawable"></item>-->
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
        <item name="android:isIndicator">true</item>
        <!--<item name="android:thumb">@null</item>-->
    </style>

</resources>
